        private static void Main(string[] args)
        {
            Console.Write("Enter a sentence: ");
            string sentence = Console.ReadLine();

            int long_word = 0;
            int count = 0;

            for (int i = 0; i < sentence.Length; i++)
            {
                if (sentence[i] != ' ')
                {
                    count++;
                }
                else
                {
                
                if (count > long_word)
                    long_word = count;

                    count = 0;
                }
            }
            if (count > long_word)
                long_word = count;

            Console.WriteLine($"Longest word length: {long_word}");
        }
    }
